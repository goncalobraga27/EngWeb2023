extends layout 

block content 
    .w3-card-4
        header.w3-container.w3-purple
            h2 Task Form
    
        form.w3-container(method="POST")
            fieldset
                legend MetaData
                label Id
                input.w3-input.w3-round(type="text" name="id" readonly value=t.id)
                label DeadLine
                input.w3-input.w3-round(type="text" name="deadline" value=t.deadline)
                label Who
                input.w3-input.w3-round(type="text" name="who" value=t.who)
                label What
                input.w3-input.w3-round(type="text" name="what" value=t.what)
                label Done 
                input.w3-input.w3-round(type="text" name="done" value=t.done)
                
                button.w3-btn.w3-purple.w3-mb-2(type="submit") Register
            
        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d} - [#[a(href="/task") Return]]
