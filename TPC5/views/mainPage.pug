extends layout

block content
            .w3-card-4
                    header.w3-container.w3-teal
                        h1 User Form
            
                    .w3-container
                        table.w3-table-all
                            tr
                                form.w3-container(method="POST")
                                    fieldset
                                        legend MetaData
                                        label Id
                                        input.w3-input.w3-round(type="text" name="id")
                                        label Name
                                        input.w3-input.w3-round(type="text" name="nome")
                                        button.w3-btn.w3-teal.w3-mb-2(type="submit") Register

                            tr
                                form.w3-container(method="POST")
                                    fieldset
                                        legend MetaData
                                        label Id
                                        input.w3-input.w3-round(type="text" name="id")
                                        label Deadline
                                        input.w3-input.w3-round(type="text" name="deadline")
                                        label Who
                                        input.w3-input.w3-round(type="text" name="who")
                                        label What
                                        input.w3-input.w3-round(type="text" name="what")
                                        label Done
                                        input.w3-input.w3-round(type="text" name="done" value="0" readonly)
                                        button.w3-btn.w3-teal.w3-mb-2(type="submit") Register

            .w3-card-4
                    header.w3-container.w3-teal
                        h1 Tasks Part
            
                    .w3-container
                        table.w3-table-all
                            tr
                                th To do
                                th Done

                            tr
                                td
                                    .w3-card-4
                                        header.w3-container.w3-teal
                                            h1 Tasks
                                        .w3-container
                                            table.w3-table-all
                                                tr
                                                    th DeadLine
                                                    th Who
                                                    th What
                                                    th Status
                                                each t in taskList 
                                                    if t.done == 0
                                                        tr
                                                            td= t.deadline
                                                            td= t.who
                                                            td= t.what
                                                            td= t.done
                                                            td
                                                                button.w3-btn.w3-round.w3-indigo.w3-margin-right
                                                                    a(href="/tasks/edit/"+t.id) Edit
                                                                button.w3-btn.w3-round.w3-indigo.w3-margin-right
                                                                    a(href="/tasks/done/"+t.id) Done
                                                                button.w3-btn.w3-round.w3-indigo.w3-margin-right
                                                                    a(href="/tasks/delete/"+t.id) Delete

                                td
                                    .w3-card-4

                                        header.w3-container.w3-teal
                                            h1 Tasks
                                        .w3-container
                                            table.w3-table-all
                                                tr
                                                    th DeadLine 
                                                    th Who 
                                                    th What 
                                                    th Status

                                                each t in taskList
                                                    if t.done == 1
                                                        tr
                                                            td= t.deadline
                                                            td= t.who
                                                            td= t.what
                                                            td= t.done                            



