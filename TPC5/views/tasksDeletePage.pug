extends layout

block content
    .w3-card-4
        header.w3-container.w3-purple
            h2 Delete Task Form 
        
        form.w3-container(method="POST")
            fieldset
                legend MetaData
                label Id
                input.w3-input.w3-round(type="text" name="id" value=t.id readonly )
                label Deadline
                input.w3-input.w3-round(type="text" name="deadline" value=t.deadline readonly)
                label Who
                input.w3-input.w3-round(type="text" name="who" value=t.who readonly)
                label What
                input.w3-input.w3-round(type="text" name="what"  value=t.what readonly)
                label Done
                input.w3-input.w3-round(type="text" name="done" value="0" readonly)
            button.w3-btn.w3-purple.w3-mb-2(type="submit") Delete
            button.w3-btn.w3-purple.w3-mb-2 [#[a(href="/tasks") Cancel]]


        footer.w3-container.w3-purple
            h5 Generated by EngWeb2023 in #{d} - [#[a(href="/tasks") Return]]