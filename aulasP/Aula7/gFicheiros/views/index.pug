extends layout

block content
  .modal(id="display")
  .w3-card-4 
    header.w3-indigo 
      h1 File Upload 
    form.w3-container(action="/files" method="POST" enctype="multipart/form-data")
      label.w3-text-teal 
        b Select File 
      input.w3-input.w3-border.w3-ligth-grey(type="file" name="myfile")
      label.w3-text-teal 
        b Description
      input.w3-input.w3-border.w3-ligth-grey.w3-margin(type="text" name="desc")
      input.w3-btn.w3-blue-grey(type="submit" value="Send")

  .w3-card-4 
    header.w3-indigo 
      h2 File List
    .w3-container 
      table.w3-table-all 
        tr 
          th Date 
          th File 
          th Size 
          th Type 
        
        each f in files
          tr(onClick='showImage(\"'+f.name+'\", \"'+f.mimetype+'\")')
            td= f.date
            td= f.name 
            td= f.size 
            td= f.mimetype 
    footer.w3-container.w3-indigo 
      address Generated by upload-singles :: EngWeb2023 em #{d}


