extends layout

block content
  .w3-card-4 
    header.w3-indigo 
      h1 Shop List: #{list.designacao}
      h2= list.data
    .w3-container 
      table.w3-table-all 
        tr 
          th Name
          th Category
          th Quantity
          th Unit
          th Actions

        each p in list.produtos
          tr
            td= p.designacao
            td= p.categoria
            td= p.quantidade.valor
            td= p.quantidade.unidade 
            td CRU #[button.w3-btn(id="delProd") D]
    footer.w3-container.w3-indigo 
      address Generated by shop-list-management :: EngWeb2023 em #{d}

  
