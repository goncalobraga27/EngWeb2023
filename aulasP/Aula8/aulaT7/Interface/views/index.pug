extends layout

block content
  .w3-card-4 
    header.w3-indigo 
      h1 Shop List Management 
    .w3-container 
      table.w3-table-all 
        tr 
          th Name
          th Date 
          th Products 
          th Actions
        
        each l in lists
          tr(onClick='showList(\"'+l._id+'\")')
            td= l.designacao
            td= l.data
            td= l.produtos.length 
            td  CRUD 
    footer.w3-container.w3-indigo 
      address Generated by shop-list-management :: EngWeb2023 em #{d}

  
